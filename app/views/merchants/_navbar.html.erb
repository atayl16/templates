<!-- Navbar (sit on top) -->
<div class="w3-top">
  <div class="w3-bar w3-white w3-card" id="myNavbar">
    <%= link_to "#{@merchant.name}", {:controller => "merchants", :action => "#{@merchant.vertical}"}, class: "w3-bar-item w3-button"%>

    <!-- Right-sided navbar links -->
    <div class="w3-right w3-hide-small">
      <a href="/merchants/<%= @merchant.slug %>/classes" class="w3-bar-item w3-button">Classes</a>
      <a href="/merchants/<%= @merchant.slug %>/events" class="w3-bar-item w3-button"> Events</a>
      <a href="/merchants/<%= @merchant.slug %>/waitlist" class="w3-bar-item w3-button"> Check-In</a>
    </div>
    <!-- Hide right-floated links on small screens and replace them with a menu icon -->

    <a href="javascript:void(0)" class="w3-bar-item w3-button w3-right w3-hide-large w3-hide-medium" onclick="w3_open()">
      <i class="fa fa-bars"></i>
    </a>
  </div>
</div>
